<br />
<div class="booyah-box">
  <div class= "row">
    <div class= "col-4">
<!--     <%= image_tag 'user.png' %> -->
    </div>

    <div class="col-8">
      <h1><%= current_user.email %></h1>
      <h3>Member Since: <%= current_user.created_at.strftime("%m/%d/%Y") %></h3>
    </div>
  </div>
</div>

<br class="clr">


<div class="booyah-box col-10 offset-1">
  <h1>What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid' %>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col 12- col-sm-4 text-center">
        <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2">
    <br class="clr">
  <% end %>
  
  <br />
  <br />
  <h1>What I'm Teaching</h1>
  <br />
  <br />
  
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-fluid' %>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col 12- col-sm-4 text-center">
        <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <br />
    <hr class="col-8 offset-2">
    <br class="clr">
  <% end %>
</div>